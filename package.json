{
  "name": "dayflow",
  "version": "0.1.0",
  "description": "Electron-based cross-platform timeline recorder and analyzer.",
  "main": "electron/main.js",
  "scripts": {
    "start": "electron .",
    "package": "electron-builder",
    "lint": "echo \"No lint configured yet\""
  },
  "build": {
    "appId": "com.dayflow.app",
    "productName": "Dayflow",
    "files": [
      "electron/**/*",
      "docs/**/*",
      "README.md",
      "LICENSE"
    ],
    "mac": {
      "target": "dmg"
    },
    "win": {
      "target": "nsis"
    },
    "linux": {
      "target": ["AppImage", "deb"],
      "category": "Utility"
    }
  },
  "devDependencies": {
    "electron": "^31.2.1",
    "electron-builder": "^24.13.3"
  }
}
